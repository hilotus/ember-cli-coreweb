<div class="">
  {{input value=addValue}}
  <button class="button" disabled={{buttonDisabled}} {{action 'add'}}>Add</button>
</div>
<div class="row">
  <ul class="todo-list">
    {{#each model as |todo|}}
      <li>
        {{input type="checkbox" checked=todo.isCompleted}}
        <span class="{{if todo.isCompleted 'completed'}}">{{todo.title}}</span>
        <i class="fa fa-times pointer" {{action 'del' todo}}></i>
      </li>
    {{/each}}
  </ul>
</div>
